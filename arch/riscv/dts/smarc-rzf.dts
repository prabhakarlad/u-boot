/dts-v1/;
#include <dt-bindings/gpio/gpio.h>
#include "r9a07g043f.dtsi"
#include <dt-bindings/pinctrl/rzg2l-pinctrl.h>
#include <dt-bindings/cache/andestech,ax45mp-cache.h>

#include "binman.dtsi"

/ {
	compatible = "renesas,smarc-evk", "renesas,r9a07g043f01", "renesas,r9a07g043";
	model = "Renesas SMARC EVK based on r9a07g043f01";

	aliases {
		serial0 = &scif0;
	};

	chosen {
		stdout-path = "serial0:115200n8";
	};

	memory@48000000 {
		u-boot,dm-spl;
		device_type = "memory";
		/* first 128MB is reserved for secure area. */
		reg = <0 0x48000000 0 0x38000000>;
	};
};

&L2 {
	andestech,pma-regions = <0x0 0x58000000 0x0 0x08000000
				 (AX45MP_PMACFG_ETYP_NAPOT |
				  AX45MP_PMACFG_MTYP_MEM_NON_CACHE_BUF)>,
				<0x0 0x00000000 0x0 0x10000000
				 (AX45MP_PMACFG_ETYP_NAPOT |
				  AX45MP_PMACFG_MTYP_MEM_NON_CACHE_BUF)>,
				  <0x0 0x20000000 0x0 0x08000000
				 (AX45MP_PMACFG_ETYP_NAPOT |
				  AX45MP_PMACFG_MTYP_MEM_NON_CACHE_BUF)>;
};

&pinctrl {
	scif0_pins: scif0 {
		pinmux = <RZG2L_PINMUX(6, 4, 6)>,
			 <RZG2L_PINMUX(6, 3, 6)>;
	};

	eth1_pins: eth1 {
		pinmux = <RZG2L_PINMUX(7, 0, 1)>,
			 <RZG2L_PINMUX(7, 1, 1)>,
			 <RZG2L_PINMUX(7, 2, 1)>,
			 <RZG2L_PINMUX(7, 3, 1)>,
			 <RZG2L_PINMUX(7, 4, 1)>,
			 <RZG2L_PINMUX(8, 0, 1)>,
			 <RZG2L_PINMUX(8, 4, 1)>,
			 <RZG2L_PINMUX(9, 0, 1)>,
			 <RZG2L_PINMUX(9, 1, 1)>,
			 <RZG2L_PINMUX(9, 2, 1)>,
			 <RZG2L_PINMUX(9, 3, 1)>,
			 <RZG2L_PINMUX(10, 0, 1)>,
			 <RZG2L_PINMUX(10, 2, 1)>,
			 <RZG2L_PINMUX(10, 3, 1)>,
			 <RZG2L_PINMUX(10, 4, 1)>;
	};
};

&xinclk {
        clock-frequency = <24000000>;
};

&scif0 {
	pinctrl-names = "default";
	pinctrl-0 = <&scif0_pins>;
	status = "okay";
	clock = <100000000>;
};

&sdhi0 {
	bus-width = <8>;
	status = "okay";
};

&sdhi1 {
	/* pinctrl placeholder
	 * A power enable pin (SD1_PWR_EN) must be defined to interface with a
	 * SD card.
	 * The SD1_PWR_EN pin is associated with P0_3.
	 * A HIGH signal on SD1_PWR_EN will enable supply voltage for SD card.
	*/
	bus-width = <4>;
	status = "okay";
};

&i2c0 {
	status = "okay";
};

&i2c1 {
	status = "okay";
};

&eth1 {
	pinctrl-names = "default";
	pinctrl-0 = <&eth1_pins>;
	phy-handle = <&phy1>;
	phy-mode = "rgmii";
	status = "okay";

	phy1: ethernet-phy@7 {
		reg = <7>;
	};
};
